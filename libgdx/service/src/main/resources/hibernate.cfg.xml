<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">org.apache.derby.jdbc.EmbeddedDriver</property>
        <property name="connection.url">jdbc:derby:derbyDB;create=true</property>

        <!-- Ensure repeatable-read isolation level. -->
        <property name="connection.isolation">8</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">20</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.DerbyTenSevenDialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>

        <mapping class="com.demodu.turbohearts.service.models.LobbyRoom"/>
        <mapping class="com.demodu.turbohearts.service.models.User"/>
        <mapping class="com.demodu.turbohearts.service.models.UserSession"/>
        <mapping class="com.demodu.turbohearts.service.models.Game"/>
        <mapping class="com.demodu.turbohearts.service.models.Participation"/>

    </session-factory>

</hibernate-configuration>